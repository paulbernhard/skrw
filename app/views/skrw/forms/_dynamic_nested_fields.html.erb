<% if ff.object.new_record? %>

  <%= content_tag(:template, data: { target:"skrw-nested-fields.template" }) do %>
    <%= content_tag(:div, data: { target: "skrw-nested-fields.fields", "new-record": ff.object.new_record? }) do %>
      <%= yield %>
      <%= link_to "Remove", "#", data: { action: "skrw-nested-fields#remove" } %>
    <% end %>
  <% end %>

<% else %>

  <%= content_tag(:div, data: { target: "skrw-nested-fields.fields", "new-record": ff.object.new_record? }) do %>
    <%= yield %>
    <%= link_to "Remove", "#", data: { action: "skrw-nested-fields#remove" } %>
  <% end %>

<% end %>
