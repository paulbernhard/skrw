<div class="skrw-session<%= ' skrw-session--with-controls' if content_for?(:skrw_controls) %><%= ' skrw-session--logged-in' if user_signed_in? %>" data-controller="skrw--session" data-skrw--session-logged-in="<%= user_signed_in? ? 'true' : 'false' %>">
  <%= render "skrw/sessions/flashes" %>

  <div class="skrw-session__user">
    <%= render "skrw/sessions/user" %>
  </div>

  <% if content_for?(:skrw_controls) %>
    <div class="skrw-session__controls">
      <%= yield :skrw_controls %>
    </div>
  <% end %>

  <div class="skrw-session__btn" data-action="click->skrw--session#toggle"></div>
</div>
