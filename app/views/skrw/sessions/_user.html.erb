<% if user_signed_in? %>

  <%= current_user.email %>
  <%= link_to "Logout", skrw.destroy_user_session_path, method: :delete %>

<% else %>

  <%= simple_form_for resource, url: user_session_path, html: { class: "skrw-form skrw-form--row--min-md" } do |f| %>

    <%= f.input :email, label: "email", wrapper_html: { class: "skrw-form__control--row" } %>
    <%= f.input :password, label: "password", wrapper_html: { class: "skrw-form__control--row" } %>
    <%= f.input :remember_me, label: "remember me?", as: :boolean, wrapper_html: { class: "skrw-form__control--row" } %>

    <div class="skrw-form__control skrw-form__control--buttons">
      <%= f.button :submit, "Login" %>
    </div>

  <% end %>

<% end %>
