<% if user_signed_in? %>

  <%= current_user.email %>
  (<%= link_to "Logout", skrw.destroy_user_session_path, method: :delete, class: "skrw-control" %>)

<% else %>

  <%= skrw_form_for resource, url: user_session_path, html: { class: "skrw-form skrw-grid" } do |f| %>

    <%= f.input :email, label: "email", wrapper_html: { class: "skrw-form__control--row skrw-grid__col--12 skrw-grid__col--s-3" } %>
    <%= f.input :password, label: "password", wrapper_html: { class: "skrw-form__control--row skrw-grid__col--12 skrw-grid__col--s-4" } %>
    <%= f.input :remember_me, label: "remember me?", as: :boolean, wrapper_html: { class: "skrw-form__control--row skrw-grid__col--12 skrw-grid__col--s-3" } %>

    <%= f.buttons class: "skrw-form__control--row skrw-grid__col--12 skrw-grid__col--s-2 skrw-grid__col--justify-center" do %>
      <%= f.button :submit, "Login" %>
    <% end %>

  <% end %>

<% end %>
